<%= "Item already claimed for #{@item.user.user_name}." %> 
<% if current_user.id == @item.claimer_id %>
    <%= form_for @item do |f| %>
    	<%= f.hidden_field(:item_id, value: @item.id) %>
    	<%= f.hidden_field(:claimer_id, value: current_user.id) %>
    	<%= submit_tag "UnClaim Item", @item, :method => :delete %><br> 
    <% end %>
<% end %>

